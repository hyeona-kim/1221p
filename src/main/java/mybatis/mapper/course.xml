<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="course">

  
	<select id="list" resultType="mybatis.vo.CourseVO">
		select * from course_t
	</select>

	<insert id="add" parameterType="Map">
			INSERT INTO course_t(c_name,start_date,end_date,course_fee,c_peo_num, c_round_num)
			values(#{c_name}, #{start_date}, #{end_date}, #{course_fee}, #{c_peo_num}, #{c_round_num})
	</insert>

	<!--  과정삭제 status값을 1로 변경 -->
	<update id="del" parameterType="String">
			update course_t
			set c_status = 1
			where c_idx = #{c_idx}
	</update>
	
	<update id="edit" parameterType="map">
		update bbs_t
		<trim prefix="SET" suffixOverrides=","> 
        c_name = #{c_name},
        start_date = #{start_date},
        end_date = #{end_date},
        course_fee = #{course_fee},
        c_peo_num = #{c_peo_num},
        c_round_num = #{c_round_num}
 		 </trim>
			where c_idx = #{c_idx}
</update>

</mapper>